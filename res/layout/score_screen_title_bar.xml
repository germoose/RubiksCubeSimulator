<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/closeButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_custom_button"
        android:text=" X " />

    <Button
        android:id="@+id/leaderboardButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/closeButton"
        android:background="@drawable/blue_custom_button"
        android:text="LeaderBoards" />

    <LinearLayout
        android:id="@+id/buttonList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/leaderboardButton"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/white_custom_button"
            android:text="Summary"
            android:textColor="#000000" >

        </Button>

        <Button
            android:id="@+id/Details"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/white_custom_button"
            android:text="Details"
            android:textColor="#000000" >

        </Button>
        
         <Button
            android:id="@+id/ReplayButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/white_custom_button"
            android:text="Replay"
            android:textColor="#000000" >

        </Button>
        
    </LinearLayout>

</RelativeLayout>