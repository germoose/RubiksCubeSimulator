<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/leaderboardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="114dp"
        android:layout_toLeftOf="@+id/title"
        android:src="@drawable/rubiks_cube" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Score Screen"
        android:textSize="24dp" />

    <Button
        android:id="@+id/closeButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/red_custom_button"
        android:text=" X " />

    <Button
        android:id="@+id/leaderboardButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/closeButton"
        android:background="@drawable/blue_custom_button"
        android:text="LeaderBoards ->" />

    <LinearLayout
        android:id="@+id/buttonList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Summary" 
            android:background="@drawable/purple_custom_button"
            android:layout_weight="1">
        </Button>

        <Button
            android:id="@+id/Details"
            android:layout_width="wrap_content"
       	    android:layout_height="match_parent"
            android:text="Details"
            android:background="@drawable/purple_custom_button"
            android:layout_weight="1" >
        </Button>
        
    </LinearLayout>

</RelativeLayout>